<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signupbg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/signuplogo"
            android:layout_gravity="center_horizontal"
            android:layout_margin="70dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/bktologin"
                    android:layout_width="21dp"
                    android:layout_height="25dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/back" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="22dp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/signup"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/reg_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="65dp"
                    android:background="#0000"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="35dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:textColor="@color/signintext"
                    android:textColorHint="@color/signintext"
                    android:textSize="16dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@color/signintext" />

                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="65dp"
                    android:background="#0000"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="35dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:textColor="@color/signintext"
                    android:textColorHint="@color/signintext"
                    android:textSize="16dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@color/signintext" />


                <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="65dp"
                    android:background="#0000"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="35dp"
                    android:hint="Password"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:textColor="@color/signintext"
                    android:textColorHint="@color/signintext"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@color/signintext" />

                <EditText
                    android:id="@+id/reg_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="65dp"
                    android:background="#0000"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="35dp"
                    android:hint="Confirm Password"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:textColor="@color/signintext"
                    android:textColorHint="@color/signintext"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="63dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@color/signintext" />


            </LinearLayout>
        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="170dp"-->
            <!--android:background="@color/signintext"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:layout_marginBottom="85dp"-->
            <!--android:layout_marginLeft="115dp"-->
            <!--/>-->

    </FrameLayout>

    <TextView
        android:id="@+id/reg_btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:text="Submit"
        android:textSize="20dp"
        android:textColor="#9e3d41"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"


        />
</RelativeLayout>